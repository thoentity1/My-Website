  <h2 style="padding: 20px;">Shop Products</h2>
  <div class="product-grid" id="product-list"></div>

  <button class="checkout-btn" onclick="goToCart()">Checkout</button>

  <script>
    const products = [
      { name: "Make Up Artistry Course", price: 1200, image: "images/nailkit.jpg" },
      { name: "Facial Kit", price: 450, image: "images/facialkit.jpg" },
      { name: "Skin Glow Serum", price: 350, image: "images/serum.jpg" },
      { name: "Acrylic Nail Kit", price: 650, image: "images/acrylic.jpg" },
    ];

    const container = document.getElementById("product-list");
    const cart = [];

    function addToCart(name, price) {
      cart.push({ name, price });
      localStorage.setItem("phantom_cart", JSON.stringify(cart));
      alert(`${name} added to cart`);
    }

    function goToCart() {
      localStorage.setItem("phantom_cart", JSON.stringify(cart));
      window.location.href = "cart.html";
    }

    products.forEach(p => {
      container.innerHTML += `
        <div class="product-card">
          <img src="${p.image}" alt="${p.name}">
          <h3>${p.name}</h3>
          <p>R${p.price}</p>
          <button onclick="addToCart('${p.name}', ${p.price})">Add to Cart</button>
        </div>
      `;
    });
  </script>
